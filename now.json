{
  "version": 2,
  "name": "website",
  "scope": "falafeljan",
  "alias": ["kassel.works", "www.kassel.works"],
  "builds": [
    {
      "src": "./app/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.go",
      "use": "@now/go"
    }
  ],
  "routes": [
    {
      "src": "/api/log",
      "dest": "/api/log.go"
    },
    {
      "src": "/(.*)",
      "dest": "/app/$1"
    }
  ]
}
